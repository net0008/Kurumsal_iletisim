# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# Yerel MongoDB için:
MONGODB_URI=mongodb://localhost:27017/corporate-chat

# MongoDB Atlas için (örnek):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/corporate-chat?retryWrites=true&w=majority

# Session Secret
SESSION_SECRET=corporate-chat-secret-key-2024

# File Upload
MAX_FILE_SIZE=20971520  # 20MB in bytes

# Security
BCRYPT_ROUNDS=10